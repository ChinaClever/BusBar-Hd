<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clever.www.busbar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/TipDialog"></activity>
        <activity
            android:name=".box.BoxActivity"
            android:theme="@style/TipDialog" />
        <activity
            android:name=".setting.SetCheckPwdActivity"
            android:theme="@style/TipDialog" />
        <activity android:name=".setting.setline.SetLineActivity" />
        <activity
            android:name=".setting.setcom.SetComActivity"
            android:theme="@style/TipDialog"></activity>
        <activity android:name=".setting.setbox.SetBoxActivity"></activity>
    </application>

</manifest>